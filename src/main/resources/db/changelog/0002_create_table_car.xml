<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0002-1" author="patrykkawula">
        <createTable tableName="car">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="brand" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="model" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="production_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="registration_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="mileage" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="planned_annual_mileage" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="technical_inspection_end_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="insurence_end_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="payment_rate_date" type="DATE"/>
            <column name="next_car_service_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>